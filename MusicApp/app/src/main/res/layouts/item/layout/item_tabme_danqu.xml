<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/show"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/add"
            android:padding="8dp"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:src="@drawable/include_default" />
        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />
        <LinearLayout
            android:paddingLeft="10dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/songNane"
                android:textColor="#000"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="歌名"/>

            <TextView
                android:id="@+id/singer"
                android:maxLines="1"
                android:textColor="#666"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="歌手" />
        </LinearLayout>
        <ImageView
            android:id="@+id/more"
            android:src="@drawable/include_default"
            android:padding="8dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <ImageView
            android:id="@+id/more2"
            android:src="@drawable/include_default"
            android:padding="8dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hide"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/header"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/include_default" />

        <TextView
            android:id="@+id/fileName"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="left|center"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="歌手-歌名"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/header"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/getLike"
            app:layout_constraintStart_toEndOf="@+id/getLike"
            app:layout_constraintTop_toTopOf="@+id/getLike"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintWidth_percent=".1"
            app:srcCompat="@drawable/include_default" />

        <ImageView
            android:id="@+id/downLoad"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/getLike"
            app:layout_constraintStart_toEndOf="@+id/share"
            app:layout_constraintTop_toTopOf="@+id/getLike"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintWidth_percent=".1"
            app:srcCompat="@drawable/include_default" />

        <ImageView
            android:id="@+id/itemRankSong_ivMv"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/getLike"
            app:layout_constraintStart_toEndOf="@+id/comment"
            app:layout_constraintTop_toTopOf="@+id/getLike"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintWidth_percent=".1"
            app:srcCompat="@drawable/include_default" />

        <ImageView
            android:id="@+id/hideMore"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/getLike"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/itemRankSong_ivMv"
            app:layout_constraintTop_toTopOf="@+id/getLike"
            app:layout_constraintWidth_percent=".1"
            app:srcCompat="@drawable/include_default" />

        <ImageView
            android:id="@+id/getLike"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@+id/fileName"
            app:layout_constraintTop_toBottomOf="@+id/fileName"
            app:layout_constraintWidth_percent=".1"
            app:srcCompat="@drawable/include_default" />

        <ImageView
            android:id="@+id/comment"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/getLike"
            app:layout_constraintStart_toEndOf="@+id/downLoad"
            app:layout_constraintTop_toTopOf="@+id/getLike"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintWidth_percent=".1"
            app:srcCompat="@drawable/include_default" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>