<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/itemTabMe_main"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="60dp">
        
        <ImageView
            android:src="@drawable/include_default"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <TextView
            android:id="@+id/itemTabMe_tvTitle"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="#000"
            android:text="标题文字"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/itemTabMe_ivIncrease"
            android:padding="18dp"
            android:src="@drawable/include_default"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <ImageView
            android:id="@+id/itemTabMe_ivDaoru"
            android:padding="18dp"
            android:src="@drawable/include_default"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <ImageView
            android:id="@+id/itemTabMe_ivMore"
            android:padding="18dp"
            android:src="@drawable/include_default"
            android:layout_width="60dp"
            android:layout_height="60dp" />

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/itemTabMe_rvShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>