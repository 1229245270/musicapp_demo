<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/itemTabMeDown_ivIcon"
        android:src="@drawable/include_default"
        android:layout_width="60dp"
        android:layout_height="60dp" />
    <LinearLayout
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/itemTabMeDown_tvName"
            android:textColor="#000000"
            android:textSize="18sp"
            android:gravity="start|center"
            android:text="歌曲列表"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/itemTabMeDown_tvSongNum"
                android:textColor="#666666"
                android:textSize="12sp"
                android:gravity="start|center"
                android:text="0首"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/itemTabMeDown_tvSongDownNum"
                android:layout_marginLeft="16dp"
                android:textColor="#666666"
                android:textSize="12sp"
                android:gravity="start|center"
                android:text="0首已下载"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:visibility="gone"/>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:text="猜你喜欢"
        android:padding="4dp"
        android:background="@drawable/tabme_bg_guess"
        android:textColor="#117cc7"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:drawableLeft="@drawable/tabme_guess"
        android:id="@+id/itemTabMeDown_tvHint"
        android:layout_gravity="center"
        android:src="@drawable/include_default"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:visibility="visible"/>
    <ImageView
        android:id="@+id/itemTabMeDown_ivMore"
        android:src="@drawable/tabme_more"
        android:layout_marginLeft="16dp"
        android:layout_gravity="center"
        android:padding="13dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />
</LinearLayout>